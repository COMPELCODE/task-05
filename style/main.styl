html,
body,
.wrapper
    height: 100%

.wrapper
    .header .top-bar
        height: 4rem
        line-height: 4rem
        text-align: center
        background-color: #5fc0cd
        .back-btn
            float: left
            line-height: 4rem
            font-size: 3.6rem
            margin-left: 1.5rem
            color: #fff
        .title
            font-size: 1.8rem
            color: #fff

.main
    .personal-info
        width: 100%
        position: relative
        // background: url(../images/bg.jpg) no-repeat 0 -40px
        // background-size: cover
        padding: 4rem 3rem 4rem
        overflow: hidden
        z-index: 99
        .avatar
            width: 8.5rem
            height: 8.5rem
            float: left
            position: relative
            overflow: hidden
            border-radius: 50%
            background-color: #efefef
            img
                width: 6rem
                position: absolute
                top: 1rem
                left: 50%
                transform: translate(-50%)
        .bg-blur
            width: 100%
            position: absolute
            top: 0
            left: 0
            filter: blur(2px)
            z-index: -100
        .bg-cover
            width: 100%
            height: 100%
            position: absolute
            top: 0
            left: 0
            background-color: rgba(0, 0, 0, .2)
            z-index: -99
        .info
            float: left
            color: #fff
            margin-left: 6%
            padding-top: 1.9rem
            padding-bottom: 2.4rem
            & p:first-child
                .name
                    font-size: 1.8rem
                .age
                    font-size:  1.6rem
                    margin-left: 1rem
            & p:last-child
                margin-top: 2rem
                font-size: 1.2rem
                .location
                    font-size: 1.4rem
                    color: #5fc0cd
                    vertical-align: middle
                    margin-right: 1rem
    .personal-skill
        .skill-header
            height: 5rem
            line-height: 5rem
            font-size: 1.6rem
            .title
                display: inline
                border-left: 2px solid #5fc0cd
                margin-left: 1.5rem
                padding-left: 1.4rem
        .skill-content
            padding-left: 1.7rem
            border-top: 1px solid #ededed
            border-bottom: 1px solid #ededed
            .skill-item + .skill-item
                border-top: 1px solid #ededed
                & span:first-child
                    color: #ccc
            .skill-item
                height: 5rem
                line-height: 5rem
                padding-left: 0.8rem
                font-size: 1.6rem
                .star
                    color: #f00
                    font-size: 2.4rem
                    font-weight: 500
                    vertical-align: sub
                .line
                    width: 1px
                    height: 18px
                    display: inline-block
                    background-color: #ededed
                    vertical-align: middle
                    margin: 0 1.4rem
            .skill-item.multiline
                display: flex
                line-height: 1
                & span:first-child
                    width: 6.4rem
                    line-height: 5rem
                & span:last-child
                    flex: 1
                    font-size: 1.2rem
                    padding: 1.2rem 0
                & .line
                    position: relative
                    top: calc(50% - 9px)
.footer
    .btn
        width: 49%
        line-height: 4rem
        border-radius: 4px
        text-align: center
        font-size: 1.7rem
    .btn.comment-btn
        float: left
        border: 1px solid #5fc0cd
        color: #5fc0cd
    .btn.contact-btn
        float: right
        background-color: #5fc0cd
        color: #fff

@media only screen and (min-device-width: 414px)
    .main
        .personal-info
            padding: 6rem 3rem 6rem
    .footer
        padding: 8rem 1.9rem 0
@media only screen and (min-device-width: 375px)
    .footer
        padding: 7rem 1.9rem 0
@media only screen and (max-device-width: 374px)
    .main
        .personal-info
            padding: 2rem 3rem 2rem
    .footer
        padding: 3.6rem 1.9rem 0
